            "login": {
              "description": "Логін користувача",
              "type": "string",
              "pattern": "^[a-zA-Z][a-zA-Z0-9._-]{6,25}$"
            },
            "password": {
              "description": "Пароль користувача",
              "type": "string",
              "pattern": "^(?=.*[a-z])(?=.*[A-Z])[A-Za-z!@#$%^&*()_+]{6,25}$"
            },
            "email": {
              "description": "Електрона пошта користувача",
              "type": "string",
              "format": "email"
            }
          },
